<!-- Specify the properties file by setting the "log4j.configuration" property at runtime.
  e.g. java -jar -Xmx2g -Dlog4j.configurationFile=log4j_debug.xml gsea.jar -->
<Configuration>
  <Appenders>
    <Console name="stdout" target="SYSTEM_OUT">
      <PatternLayout pattern="%-8r [%-6p] [thr-%t] - %m%n"/>
    </Console>
    <RollingFile name="FileLog" fileName="${sys:user.home}/gsea_home/gsea-debug.log"
                 filePattern="${sys:user.home}/gsea_home/gsea-debug-backup-%1.log">
      <PatternLayout pattern="%-8r [%-6p] [thr-%t] - %m%n"/>
      <Policies>
        <SizeBasedTriggeringPolicy size="10 MB"/>
      </Policies>
      <DefaultRolloverStrategy min="1" max="3"/>
    </RollingFile>
  </Appenders>
  <Loggers>
    <Root level="debug" additivity="false">
      <AppenderRef ref="stdout"/>
      <AppenderRef ref="FileLog"/>
    </Root>
  </Loggers>
</Configuration>